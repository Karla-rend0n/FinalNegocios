<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('includes/head.ejs') %>
</head>

<body>
  <%- include('includes/nav.ejs') %>

  <div class="p-2">
    <div class="container text-center">
      <div class="row">
        <div class="col-lg-3">
          <div class="btn-group">
            <button class="btn btn-info btn-lg text-blanco" type="button">
              Libros
            </button>
            <button type="button" class="btn btn-lg btn-info text-blanco dropdown-toggle dropdown-toggle-split"
              data-bs-toggle="dropdown" aria-expanded="false">
              <span class="visually-hidden">Toggle Dropdown</span>
            </button>
            
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/book-life?tipo=ebook">E-Book</a></li>
              <li><a class="dropdown-item" href="/book-life?tipo=fisico">Físicos</a></li>
              <li>
                <hr class="dropdown-divider">
              </li>
              <li><a class="dropdown-item" href="/book-life">Todos</a></li>
            </ul>
            
          </div>
        </div>
        <div id="carouselExampleControls" class="carousel slide mt-25 p-5 m-5" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="5000">
              <img src="\assets\1.png" class="d-block w-30 h-100" alt="...">
            </div>
            <div class="carousel-item" data-bs-interval="5000">
              <img src="\assets\2.png" class="d-block w-30 h-100" alt="...">
            </div>
            <div class="carousel-item" data-bs-interval="5000">
              <img src="\assets\3.png" class="d-block w-30 h-100" alt="...">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
        <div class="col">
          <div class="p-3">
            <div class="row row-cols-1 row-cols-md-2 g-4">
              <% for(const product of products) { %>
                <div class="col">
                  <div class="card" style="width: 14rem; width: 16rem;">
                    <img src="<%= product.img %>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title"><%= product.title %></h5>
                      <h6 class="card-subtitle mb-2 text-muted"><%= product.subtitle %></h6>
                      <p class="card-text">$<%= product.price %></p>
                      <div>
                        <form target="paypal" action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post">
                          <input type="hidden" name="cmd" value="_s-xclick">
                          <input type="hidden" name="hosted_button_id" value="NQPHC6NMAY692">
                          <input type="image" src="https://www.sandbox.paypal.com/es_XC/i/btn/btn_cart_LG.gif" border="0"
                            name="submit" alt="PayPal, la forma más segura y rápida de pagar en línea.">
                          <img alt="" border="0" src="https://www.sandbox.paypal.com/es_XC/i/scr/pixel.gif" width="1" height="1">
                        </form>
                        <form action="/book-life/wish-list/<%= product.id %>" method="POST">
                          <button style="background-color: white; border: 1px solid white;" class="card-link"><img src="<%= product.wishList ? '/assets/wish.png' : '/assets/like.png' %>"></button>
                        </form>
                        <a href="/book-life/<%= product.id %>" class="card-link d-flex justify-content-end"><img src="/assets/more.png" alt=""></a>
                      </div>
                    </div>
                  </div>
                </div>
              <% } %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
  <%- include('includes/footer.ejs') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>
</body>

</html>